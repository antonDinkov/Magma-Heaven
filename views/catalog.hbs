<section class="volcano-catalog">
    <h1 id="title"><span>Volcano</span> Catalog</h1>
    <div class="item-list">
        {{#if movies.length}}
            {{#each movies}}
                <div class="volcano">
                    <div class="volcano-img">
                        <img src="{{image}}">
                    </div>
                    <div class="volcano-info">
                        <h1>{{name}}</h1>
                        <p><span>Location: </span>{{location}}</p>
                        <p><span>Volcano Type: </span>{{volcano}}</p>
                    </div>

                    <a href="/details/:id" class="btn-details">Details</a>
                </div>
            {{/each}}
        {{else}}
            <div class="no-volcano">
                <p>There are no volcano found yet!</p>
            </div>
        {{/if}}
</section>