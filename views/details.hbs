<section id="details-info">
    <h1>Details</h1>
    <div class="volcano-image">
        <img src="{{volcanoData.image}}">
    </div>

    <div class="volcano-info">
        <div class="volcano-text">
            <h1 id="name">{{volcanoData.name}}</h1>
            <h3 id="location">Location: {{volcanoData.location}}</h3>
            <p id="type">Volcano Type: {{volcanoData.volcano}}</p>
            <p id="elevation"><span>Elevation: {{volcanoData.elevation}}m</span></p>
            <p id="last-eruption">Year of Last Eruption: {{volcanoData.year}}</p>
            <p id="votes">Vote's Count: {{voteCount}}</p>
            <p id="description">{{volcanoData.description}}</p>
        </div>
        {{#if isLoggedIn}}
        <div class="product-btn">
            <!--Only for registered user and author of the publication -->
            {{#if isAuthor}}
            <div class="author">
                <a href="/catalog/{{volcanoData._id}}/edit" class="btn-edit">Edit</a>
                <a href="/catalog/{{volcanoData._id}}/delete" class="btn-delete">Delete</a>
            </div>
            {{else}}
                {{#if hasVoted}}
                <!-- Logged in user who has already vote for this volcano-->
                <p class="vote-message">You've already voted for this volcano!</p>
                {{else}}
                <!-- Logged in user who has not yet vote for this volcano-->
                <a href="/vote" class="btn-vote">Vote</a>
                {{/if}}
            {{/if}}
        </div>
        {{/if}}
    </div>
</section>