<section id="edit-container">
    <div class="edit-container-info">
        <h1>Edit Announcement</h1>
        <form method="post">
            <label>Name:</label>
            <input type="text" id="name" name="name" {{#if volcanoData.name}}value="{{volcanoData.name}}"{{/if}}>
            <label>Location:</label>
            <input type="text" id="location" name="location" {{#if volcanoData.location}}value="{{volcanoData.location}}"{{/if}}>
            <label>Elevation:</label>
            <input type="number" id="elevations" name="elevation" {{#if volcanoData.elevation}}value="{{volcanoData.elevation}}"{{/if}}>
            <label>Year of Last Eruption:</label>
            <input type="number" id="last-year-eruption" name="year" {{#if volcanoData.year}}value="{{volcanoData.year}}"{{/if}}>
            <label>Image:</label>
            <input type="text" id="image" name="image" {{#if volcanoData.image}}value="{{volcanoData.image}}"{{/if}}>
            <label>Volcano Type:</label>
            <select id="type" name="volcano">
                <option value="Supervolcanoes" {{#if (eq volcanoData.volcano 'Supervolcanoes' )}}selected{{/if}}>
                    Supervolcanoes</option>
                <option value="Submarine" {{#if (eq volcanoData.volcano 'Submarine' )}}selected{{/if}}>Submarine
                </option>
                <option value="Subglacial" {{#if (eq volcanoData.volcano 'Subglacial' )}}selected{{/if}}>Subglacial
                </option>
                <option value="Mud" {{#if (eq volcanoData.volcano 'Mud' )}}selected{{/if}}>Mud</option>
                <option value="Stratovolcanoes" {{#if (eq volcanoData.volcano 'Stratovolcanoes' )}}selected{{/if}}>
                    Stratovolcanoes</option>
                <option value="Shield" {{#if (eq volcanoData.volcano 'Shield' )}}selected{{/if}}>Shield</option>
            </select>
            <label>Description:</label>
            <textarea id="description" name="description" placeholder="...">{{volcanoData.description}}</textarea>
            <input type="submit" id="btn" value="Submit"></input>
        </form>
    </div>
</section>